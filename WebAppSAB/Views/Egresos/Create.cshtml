@using Modelo.Entidades
@model Egresos

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nuevo Egreso</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Nuevo Egreso</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Usuario</label>
                    <select class="form-control" 
                        asp-for="UsuarioId"
                        asp-items="@ViewBag.selectListUsuarios">
                            <option value="">--Selecciona el Usuario--</option>  
                    </select>
                </div> 
                <div class="form-group">
                    <label class="control-label">Pago Luz: </label>
                    <input class="form-control" asp-for="Luz" />
                </div>
                <div class="form-group">
                    <label class="control-label">Pago Agua: </label>
                    <input class="form-control" asp-for="Agua" />
                </div>
                <div class="form-group">
                    <label class="control-label">Pago Telefono: </label>
                    <input class="form-control" asp-for="Telefono" />
                </div>
                <div class="form-group">
                    <label class="control-label">Pago Internet: </label>
                    <input class="form-control" asp-for="Internet" />
                </div>
                <div class="form-group">
                    <label class="control-label">Total Egresos: </label>
                    <input class="form-control" asp-for="TotalEgresos" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear Egreso" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
