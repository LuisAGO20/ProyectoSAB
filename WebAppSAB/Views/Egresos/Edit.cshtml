@using Modelo.Entidades
@model Egresos

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edicion de Datos de los Egresos</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Actualizar Registro de Egresos</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="EgresosId"/>

                <div class="form-group">
                    <label class="control-label">Usuario</label>
                    <select class="form-control" 
                        asp-for="UsuarioId"
                        asp-items="@ViewBag.selectListUsuarios">
                            <option value="">--Selecciona el Usuario--</option>  
                    </select>
                </div>             
                <div class="form-group">
                    <label class="control-label">Pago Luz: </label>
                    <input class="form-control" asp-for="Luz" />
                </div>
                <div class="form-group">
                    <label class="control-label">Pago Agua: </label>
                    <input class="form-control" asp-for="Agua" />
                </div>
                <div class="form-group">
                    <label class="control-label">Pago Telefono: </label>
                    <input class="form-control" asp-for="Telefono" />
                </div>
                <div class="form-group">
                    <label class="control-label">Pago Internet: </label>
                    <input class="form-control" asp-for="Internet" />
                </div>
                <div class="form-group">
                    <label class="control-label">Total Egresos: </label>
                    <input class="form-control" asp-for="TotalEgresos" />
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Actualizar Registro" />
                </div>
            </form>
        </div>
    </div>
</div>

