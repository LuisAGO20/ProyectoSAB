@using Modelo.Entidades
@model Egresos


@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Registro de Egresos</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Confirmar el borrado del Registro </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Delete">

                <input type="hidden" asp-for="EgresosId"/>

                <div class="form-group">
                    <label class="control-label">Usuario</label>
                    <select class="form-control" 
                        asp-for="UsuarioId" disabled
                        asp-items="@ViewBag.selectListUsuarios">
                            <option value="">--Selecciona el Usuario--</option>  
                    </select>
                </div>             
                <div class="form-group">
                    <label class="control-label">Pago Luz: </label>
                    <input class="form-control" asp-for="Luz" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Pago Agua: </label>
                    <input class="form-control" asp-for="Agua" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Pago Telefono: </label>
                    <input class="form-control" asp-for="Telefono" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Pago Internet: </label>
                    <input class="form-control" asp-for="Internet" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Total Egresos: </label>
                    <input class="form-control" asp-for="TotalEgresos" disabled/>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Confirmar Borrado del Registro" />
                </div>
            </form>
        </div>
    </div>
</div>

