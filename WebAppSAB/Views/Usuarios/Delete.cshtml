@using Modelo.Entidades
@model Usuario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminacion de Datos del Usuario</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Confirmar el borrado del Usuario: @Model.Nombres @Model.Apellidos</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Delete">

                <input type="hidden" asp-for="UsuarioId"/>

                <div class="form-group">
                    <label class="control-label">Nombres: </label>
                    <input class="form-control" asp-for="Nombres" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Apellidos: </label>
                    <input class="form-control" asp-for="Apellidos" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Cédula: </label>
                    <input class="form-control" asp-for="Cedula" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Ciudad: </label>
                    <input class="form-control" asp-for="Ciudad" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha de Nacimiento / Hora Registro: </label>
                    <input class="form-control" asp-for="FechaNacimiento" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Teléfono/Celular: </label>
                    <input class="form-control" asp-for="Celular" disabled/>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Confirmar Borrado del Usuario" />
                </div>
            </form>
        </div>
    </div>
</div>


