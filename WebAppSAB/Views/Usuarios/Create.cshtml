@using Modelo.Entidades
@model Usuario


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>FORMULARIO DE INGRESO PARA UN NUEVO USUARIO</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Nuevo Usuario</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Nombres: </label>
                    <input class="form-control" asp-for="Nombres" />
                </div>
                <div class="form-group">
                    <label class="control-label">Apellidos: </label>
                    <input class="form-control" asp-for="Apellidos" />
                </div>
                <div class="form-group">
                    <label class="control-label">Cédula: </label>
                    <input class="form-control" asp-for="Cedula" />
                </div>
                <div class="form-group">
                    <label class="control-label">Ciudad: </label>
                    <input class="form-control" asp-for="Ciudad" />
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha de Nacimiento / Hora Registro: </label>
                    <input class="form-control" asp-for="FechaNacimiento" />
                </div>
                <div class="form-group">
                    <label class="control-label">Teléfono/Celular: </label>
                    <input class="form-control" asp-for="Celular" />
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Crear Usuario" />
                </div>
            </form>
        </div>
    </div>
</div>

