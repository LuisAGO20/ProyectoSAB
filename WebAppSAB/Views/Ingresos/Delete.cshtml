@using Modelo.Entidades
@model Ingresos


@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Registro de Ingresos</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Confirmar el borrado del Registro </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Delete">

                <input type="hidden" asp-for="IngresosId"/>

                <div class="form-group">
                    <label class="control-label">Usuario</label>
                    <select class="form-control" 
                        asp-for="UsuarioId" disabled
                        asp-items="@ViewBag.selectListUsuarios">
                            <option value="">--Selecciona el Usuario--</option>  
                    </select>
                </div>             
                <div class="form-group">
                    <label class="control-label">Sueldo: </label>
                    <input class="form-control" asp-for="Sueldo" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha de Ingreso: </label>
                    <input class="form-control" asp-for="FechaIngreso" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Aporte: </label>
                    <input class="form-control" asp-for="AporteSeguro" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Horas Extras: </label>
                    <input class="form-control" asp-for="HorasExtra" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Fondo de Reserva: </label>
                    <input class="form-control" asp-for="FondoReserva" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Total Ingresos: </label>
                    <input class="form-control" asp-for="TotalIngresos" disabled/>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Confirmar Borrado del Registro" />
                </div>
            </form>
        </div>
    </div>
</div>

