@using Modelo.Entidades
@model Ingresos

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nuevos Ingresos</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Nuevo Ingreso</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Usuario</label>
                    <select class="form-control" 
                        asp-for="UsuarioId"
                        asp-items="@ViewBag.selectListUsuarios">
                            <option value="">--Selecciona el Usuario--</option>  
                    </select>
                </div> 
                <div class="form-group">
                    <label class="control-label">Sueldo: </label>
                    <input class="form-control" asp-for="Sueldo" />
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha de Ingreso: </label>
                    <input class="form-control" asp-for="FechaIngreso" />
                </div>
                <div class="form-group">
                    <label class="control-label">Aporte: </label>
                    <input class="form-control" asp-for="AporteSeguro" />
                </div>
                <div class="form-group">
                    <label class="control-label">Horas Extras: </label>
                    <input class="form-control" asp-for="HorasExtra" />
                </div>
                <div class="form-group">
                    <label class="control-label">Fondo de Reserva: </label>
                    <input class="form-control" asp-for="FondoReserva" />
                </div>
                <div class="form-group">
                    <label class="control-label">Total Ingresos: </label>
                    <input class="form-control" asp-for="TotalIngresos" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear Ingreso" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
