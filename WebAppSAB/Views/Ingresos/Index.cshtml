@using Modelo.Entidades
@model IEnumerable<Ingresos>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Ingresos</h1>

<div class="container">

    @*Mensaje de confirmación*@
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Ingresos</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block"
                asp-controller="Ingresos" asp-action="Create" >
                Nuevo Ingreso
            </a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() >0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr> 
                        <td>Id Ingreso</td>
                        <td>Usuario</td>
                        <td>Sueldo</td>
                        <td>Fecha Ingreso</td>
                        <td>Aporte al Seguro</td>
                        <td>Horas Extras</td>
                        <td>Fondo de Reserva</td>
                        <td>Total Ingresos</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IngresosId</td>
                            <td>@item.Usuarios.Apellidos @item.Usuarios.Nombres</td>
                            <td>@item.Sueldo</td>
                            <td>@item.FechaIngreso</td>
                            <td>@item.AporteSeguro</td>
                            <td>@item.HorasExtra</td>
                            <td>@item.FondoReserva</td>
                            <td>@item.TotalIngresos</td>
                            
                            <td>
                                <a class="btn btn-warning"
                                    asp-controller="Ingresos" asp-action="Edit" asp-route-id="@item.IngresosId">
                                    Editar
                                </a>
                                <a class="btn btn-danger"
                                    asp-controller="Ingresos" asp-action="Delete" asp-route-id="@item.IngresosId">
                                    Borrar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

