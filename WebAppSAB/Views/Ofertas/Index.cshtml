@using Modelo.Entidades
@model IEnumerable<Oferta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Carreras Ofertadas</h1>
<p>A continuación se presenta la lista de Ofertas del Sistema de Aprobación de Becas</p>

<div class = "container">
    <div class="row">     
        <div class="col-sm-6">
            <h3>Carreras Ofertadas</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn alert-success d-block"
                asp-controller="Ofertas" asp-action="Create">
                Ingresar nueva Oferta
            </a>
        </div>
    </div>

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">
                &times;
            </span>
        </button>
    </div>
    }

    <div class = "row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Fecha de Inicio/Hora</td>
                    <td>Carrera</td>
                    <td>Costo</td>
                    <td>Duración</td>
                    <td>Modalidad</td>
                </tr>
            </thead>

            <tbody>
                @foreach(Oferta oferta in Model)
                {
                    <tr>
                        <td>@oferta.OfertaId</td>
                        <td>@oferta.FechaInicio</td>
                        <td>@oferta.Carrera</td>
                        <td>@oferta.Costo</td>
                        <td>@oferta.Duracion</td>
                        <td>@oferta.Modalidad</td>
                        <td>
                            <a class="btn btn-warning"
                            asp-controller="Ofertas" asp-action="Edit" asp-route-id="@oferta.OfertaId">
                            Editar
                            </a>
                            <a class="btn btn-danger"
                            asp-controller="Ofertas" asp-action="Delete" asp-route-id="@oferta.OfertaId">
                            Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

