@using Modelo.Entidades
@model Oferta

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminacion de Datos de la Oferta</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Confirmar el borrado de la Oferta: @Model.Carrera </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">

            <form method="post" asp-action="Delete">

                <input type="hidden" asp-for="OfertaId"/>

                <div class="form-group">
                    <label class="control-label">Fecha de Inicio / Ingreso: </label>
                    <input class="form-control" asp-for="FechaInicio" disabled/>
                </div>
                <div class="form-group">
                    <label c9lass="control-label">Carrera: </label>
                    <input class="form-control" asp-for="Carrera" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Costo: </label>
                    <input class="form-control" asp-for="Costo" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Duración: </label>
                    <input class="form-control" asp-for="Duracion" disabled/>
                </div>      
                <div class="form-group">
                    <label class="control-label">Modalidad: </label>
                    <select class="form-control" 
                        asp-for="Modalidad" asp-items="Html.GetEnumSelectList<ModalidadOferta>()" disabled >
                    </select>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Confirmar Borrado de la Oferta" />
                </div>
            </form>
        </div>
    </div>
</div>

